<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="6dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_user"
                android:drawablePadding="10dp"
                android:fontFamily="@font/iran_sans"
                android:gravity="center_vertical"
                android:textColor="#9C9B9B"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/iran_sans"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:textSize="13dp"
                android:singleLine="true"
                android:text="رقیه کریمی"
                android:textColor="#676767"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner_phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="6dp"
            android:paddingEnd="8dp"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_pos_icon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/iran_sans"
                android:gravity="center_vertical"
                android:textColor="#9C9B9B"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/device"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/iran_sans_fanum"
                android:gravity="center_vertical"
                android:maxLength="11"
                android:textSize="13dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="S800"
                android:textColor="#676767"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_phone_call_1"
                android:drawablePadding="10dp"
                android:fontFamily="@font/iran_sans_fanum"
                android:gravity="center_vertical"
                android:textColor="#9C9B9B"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/iran_sans_fanum"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:textSize="13dp"
                android:text="0977654321"
                android:textColor="#676767"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


