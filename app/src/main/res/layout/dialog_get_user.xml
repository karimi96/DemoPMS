<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_round_close_24" />

    <LinearLayout
        android:id="@+id/linearName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/iran_sans"
            android:text="نام"
            android:textColor="#4D5266"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/name_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B7B7B7"
            android:fontFamily="@font/iran_sans"
            android:gravity="right"
            android:hint="@string/hintName"
            android:imeOptions="actionNext"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColor="#4D5266"
            android:textColorHint="#B7B7B7"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearName"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/iran_sans"
            android:text="دستگاه"

            android:textColor="#4D5266"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/device_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_dialog"
            android:backgroundTint="#B7B7B7"
            android:fontFamily="@font/iran_sans_fanum"
            android:gravity="right"
            android:hint="@string/hintDevice"
            android:imeOptions="actionNext"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColor="#4D5266"
            android:textColorHint="#B7B7B7"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearDevice"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/iran_sans"
            android:text="تلفن"
            android:textColor="#4D5266"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/phone_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/device_dialog"
            android:backgroundTint="#B7B7B7"
            android:fontFamily="@font/iran_sans_fanum"
            android:gravity="right"
            android:hint="@string/hintPhone"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColor="#4D5266"
            android:textColorHint="#B7B7B7"
            android:textSize="15dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/save_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearPhone"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_btn"
        android:fontFamily="@font/iran_sans"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="ذخیره"
        android:textColor="@color/white"
        android:textSize="16dp" />
</RelativeLayout>
